{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["cypress", "node"]
  },
  "exclude": ["dist"],
  "include": ["src", "./*.js"]
}
