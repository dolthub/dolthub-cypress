{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "cypress",
    "baseUrl": ".",
    "skipLibCheck": true,
    "incremental": true,
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["cypress", "node", "cypress-file-upload"],
    "paths": {
      "@utils/*": ["cypress/e2e/utils/*"],
      "@sharedTests/*": ["cypress/e2e/utils/sharedTests/*"]
    }
  },
  "exclude": ["dist"],
  "include": ["cypress"]
}
